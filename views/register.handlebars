<!DOCTYPE html>
<extends layout>
<html>
<head>
  <title>Login</title>
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
  <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<body>
  <div class="span3">
     <h1 class="h3 mb-3 font-weight-normal"  style="text-align: center; padding-top: 5px;">Please Sign Up</h1><br>
     {{#if errors}}
            {{#each errors}}
              <div class="alert alert-danger">
                {{msg}}
              </div>
              {{/each}}
      {{/if}}
    <form method="post" action="/users/register">
    <label>Name</label>
    <input type="text" name="name" class="form-control" placeholder="Name">
    <label>Roll Number</label>
    <input type="text" name="roll" class="form-control" placeholder="Roll Number">
    <label>Email Address</label>
    <input type="email" name="email" class="form-control" placeholder="Email">
    <label>Username</label>
    <input type="text" name="username" class="form-control" placeholder="Username">
    <label>Password</label>
    <input type="password" name="password" class="form-control" placeholder="Password">
    <label>Confirm Password</label>
    <input type="password" name="password2" class="form-control" placeholder="Password">
    <div class="text-center">
      <label><input type="checkbox" name="terms" required> I agree with the <a href="#">Terms and Conditions</a>.</label>
    </div>
    
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
    <div class="clearfix"></div>
    </form>
</div>
</body>
</html>